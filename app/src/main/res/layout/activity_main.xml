<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.hooyee.base.ui.view.MovableView
        android:id="@+id/move_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.hooyee.base.ui.view.MovableView>

    <TextView
        android:id="@+id/tv_code"
        app:layout_constraintTop_toBottomOf="@id/move_view"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_test1"
        app:layout_constraintTop_toBottomOf="@id/move_view"
        android:layout_marginTop="50dp"
        android:text="scroll测试"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.hooyee.base.ui.view.FlexLayout
        app:layout_constraintLeft_toRightOf="@id/tv_test1"
        app:layout_constraintRight_toRightOf="parent"
        app:custom_max_count="8"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="test1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="test2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="test3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="test4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="test5"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="test6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="test7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.hooyee.base.ui.view.FlexLayout>
</android.support.constraint.ConstraintLayout>